{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:node/recommended",
		"plugin:promise/recommended",
		"plugin:jsdoc/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["promise", "jsdoc"],
	"ignorePatterns": ["node_modules/"],
	"rules": {
		"node/no-unpublished-require": ["off"]
	}
}
